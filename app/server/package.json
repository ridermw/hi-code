{
  "name": "@hi-code/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "HI_CODE_LOG_LEVEL=info ts-node --watch src/index.ts",
    "dev:verbose": "HI_CODE_LOG_LEVEL=trace ts-node --watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "generate:flashcards": "node ../../scripts/generate-flashcards.js",
    "start": "node dist/index.js",
    "test": "vitest run --coverage",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@vitest/coverage-v8": "^1.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
